            </nav>
        </aside>

        <main class="main-content">
            <header class="header">
                <h1>Make a Reservation</h1>
                <button id="darkModeToggle" class="dark-mode-toggle">
                    <i data-lucide="moon"></i>
                </button>
            </header>

            <section class="reservation-form">
                <form id="reservationForm">
                    <div class="form-group">
                        <label for="dateRange">Check-in and Check-out Dates</label>
                        <input type="text" id="dateRange" required>
                    </div>
                    <div class="form-group">
                        <label for="guests">Number of Guests</label>
                        <input type="number" id="guests" min="1" required>
                    </div>
                    <div class="form-group">
                        <label for="roomType">Room Type</label>
                        <select id="roomType" required>
                            <option value="">Select a room type</option>
                            <option value="standard">Standard Room</option>
                            <option value="deluxe">Deluxe Room</option>
                            <option value="suite">Suite</option>
                        </select>
                    </div>
                    <button type="submit">
                        <i data-lucide="search"></i>
                        Search Available Rooms
                    </button>
                </form>
            </section>

            <section class="room-list" id="roomList">
                <!-- Room cards will be dynamically added here -->
            </section>
        </main>
    </div>

    <div id="confirmationModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Confirm Reservation</h2>
            <div id="modalContent"></div>
            <button id="confirmReservation">
                <i data-lucide="check"></i>
                Confirm Reservation
            </button>
        </div>
    </div>

    <script src="../script/reservation.js"></script>
</body>
</html>